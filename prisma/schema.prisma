generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@127.0.0.1:5432/crm_db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  payload   Json
  apiKeyId  String
  apiKey    ApiKey   @relation(fields: [apiKeyId], references: [id])

  // --- Tier 1: Standard Business Columns ---
  // Identity
  email     String?
  phone     String?
  ipAddress String?

  // Affiliate / Marketing
  source      String?
  medium      String?
  campaign    String?
  clickId     String?
  affiliateId String?

  // Commerce
  value    Float?
  currency String?

  // Technical
  userAgent String?
}
